@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<form id="account" method="post">
    <div class="text-center">
        <h2 class="RegistrationCardsHead">@ViewData["Title"]</h2>
        <p class="RegistrationCardsBody">to continue create business cards</p>
    </div>
    <div class="mb-1">
        <input asp-for="Input.UserNamer" type="text" class="form-control" id="exampleInputEmail1" autocomplete="on" aria-describedby="emailHelp" aria-required="true">
        <span asp-validation-for="Input.UserNamer" class="text-danger"></span>

    </div>
    <div class="mb-1">
        <input asp-for="Input.Password" type="password" autocomplete="new-password" class="form-control" id="exampleInputPassword1">
        <span asp-validation-for="Input.Password" class="text-danger"></span>

    </div>
    <div class="mb-1">
        <label asp-for="Input.RememberMe" class="form-label " style="font-size: 12px;">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>
    <button type="submit" class="btn w-100 mb-3" style="background-color: dimgray; border-radius:7px; font-size: 12px; color: whitesmoke; border-bottom: ">Submit</button>
    <p class="text-center pb-2" style="color:darkslategray; font-size: 15px black; border-bottom: 1px solid dimgray;">Forgot Password?</p>
</form>
<button type="submit" class="btn w-100 mb-3" style="background-color: darkslategrey; border-radius:7px; font-size: 12px;"><a style=" text-decoration: none;  color: whitesmoke; " href="/Identity/Account/Register">Create Account</a></button>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
